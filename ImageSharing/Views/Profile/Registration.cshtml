@model ImageSharing.Data.Entity.User
@{
    ViewBag.Title = "Registration";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

 @using (Html.BeginForm("Create", "Profile", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registration Form</legend>
            <div class="row ">
                <div class="col-md-offset-2 col-md-3">
                    <label for="FirstName" class="log-reg-label">First name</label>
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { @class = "log-reg-input" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-3">
                    <label for="SecondName" class="log-reg-label">Second name</label>
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.SecondName, htmlAttributes: new { @class = "log-reg-input" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-3">
                    <label for="Email" class="log-reg-label">Email</label>
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { type="email", @class = "log-reg-input" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-3">
                    <label for="Password" class="log-reg-label">Password</label>
                </div>
                <div class="col-md-5">
                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "log-reg-input" })
                </div>
               
            </div> 
            <div class="row">
                <div class="col-md-offset-2 col-md-3">
                    <label for="confirmpassword" class="log-reg-label">Confirm password</label>
                </div>
                <div class="col-md-5">
                    <input type="password" name="confirmpassword" class="log-reg-input" id="confirmpassword" />
                </div>
               
            </div> 
        
        <div class="row">
            <div class="col-md-offset-5 col-md-3">
                <input type="submit" id="submit" value="Register" />     
            </div>              
        </div>       
    </fieldset>
}
<script>
    $("#submit").click(function () {
        $(".error").hide();
        var valueX = $("#Password").val();
        var valueY = $("#confirmpassword").val();
        if (valueX != valueY) {
            alert("Passwords do not match.");
            return false;
        }
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
